{
  "compilerOptions": {
    "target": "ES2017",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "module": "CommonJS",
    "rootDir": ".",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": [],
    "resolveJsonModule": true,
    "erasableSyntaxOnly": true,
    "libReplacement": false,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "lib",
    "removeComments": false,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
    "./types/**/*.ts",
    "./config/**/*.ts",
    "./scripts/**/*.ts"
  ],
  "compileOnSave": false
}
